{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["esnext", "dom"],
    "jsx": "react-native",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "/",
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "exclude": ["node_modules", "babel.config.js", "jest.config.js", ".eslintrc.js"],
  "extends": "expo/tsconfig.base"
}
